{
  "name": "@laserware/hoverboard",
  "version": "0.0.4",
  "description": "Better menus for Electron.",
  "type": "module",
  "repository": {
    "url": "git+https://github.com/laserware/hoverboard.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "exports": {
    "./main": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.mjs",
      "require": "./dist/renderer.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "electron",
    "context-menus"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup --no-splitting && cd dist && npx prettier --write .",
    "prepublishOnly": "npm run build",
    "preversion": "npm run eslint && npm run typecheck",
    "version": "npm run prettier && git add -A src",
    "postversion": "git push && git push --tags",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --cache --write src",
    "prettier:ci": "prettier --check src",
    "eslint": "eslint --cache src",
    "vitest": "vitest",
    "example": "npm run build && cd example && npm run start"
  },
  "dependencies": {
    "@laserware/arcade": "^3.9.0",
    "@laserware/dominator": "^2.12.1"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^5.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22",
    "electron": "^33.2.1",
    "eslint": "^9.16.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.1",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
