{
  "name": "@laserware/hoverboard",
  "version": "0.10.0",
  "description": "Better context menus for Electron.",
  "author": "Mike Rourke <mike.w.rourke@gmail.com> (https://mikerourke.dev/)",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/laserware/hoverboard.git",
    "type": "git"
  },
  "type": "module",
  "exports": {
    "./main": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.mjs"
      },
      "require": {
        "types": "./dist/main.d.cts",
        "default": "./dist/main.cjs"
      }
    },
    "./preload": {
      "import": {
        "types": "./dist/preload.d.ts",
        "default": "./dist/preload.mjs"
      },
      "require": {
        "types": "./dist/preload.d.cts",
        "default": "./dist/preload.cjs"
      }
    },
    "./renderer": {
      "import": {
        "types": "./dist/renderer.d.ts",
        "default": "./dist/renderer.mjs"
      },
      "require": {
        "types": "./dist/renderer.d.cts",
        "default": "./dist/renderer.cjs"
      }
    }
  },
  "files": [
    "dist",
    "elements.d.ts",
    "main.d.ts",
    "preload.d.ts",
    "renderer.d.ts"
  ],
  "keywords": [
    "electron",
    "context-menus"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "bun run build",
    "preversion": "bun run check && bun run typecheck",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "ci": "biome ci src",
    "check": "biome check --write src example/src",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "example": "cd example && bun run start"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "@types/node": "^22",
    "electron": "^34.2.0",
    "jsdom": "^26.0.0",
    "tslib": "^2.8.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "electron",
    "esbuild"
  ]
}
